<table class="user-items">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
    </tr>
  </thead>
 
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item, class: 'item_title' %></td>
        <td><%= item.category.name %></td>
        <% if signed_in? && @user.id == current_user.id %>
          <td>
            <% if item.bids.count == 0 %>
              <%= link_to "Edit", edit_item_path %>
            <% end %>
          </td>
          <td><%= link_to "Delete", item, method: "delete", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
