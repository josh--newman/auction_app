<h1 class="user-title">
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<% if signed_in? && @user.id == current_user.id  %>
  <div class="user-settings">
    <p class="delete-account"><%= link_to "Delete Account", @user, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <p class="edit-account"><%= link_to "Edit Account", edit_user_path %></p>
    <p class="list-item"><%= link_to "List item", new_item_path %></p>
  </div>
<% end %>

<table class="user-items">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
    </tr>
  </thead>
 
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item, class: 'item_title' %></td>
        <td><%= item.category.name %></td>
        <% if signed_in? && @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_item_path %></td>
          <td><%= link_to "Delete", item, method: "delete", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
