<%= form_for(@bid) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.number_field :amount, { min: min_bid_value_for(@item), max: 999999.99, step: 0.01, value: min_bid_value_for(@item) } %>
    
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.submit "Place bid" %>
<% end %>