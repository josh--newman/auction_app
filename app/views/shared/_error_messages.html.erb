<% if @item.errors.any? %>
<div id="error_explanation">
    <div class="alert alert-error">
        The form contains <%= pluralize(@item.errors.count, "error") %>.
        <ul>
            <% @item.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>