<%= form_for(@item) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.label :name, class: "required" %><br>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </div>
    <div class="field">
        <%= f.label :vendor %><br>
        <%= f.text_field :vendor %>
    </div>
    <div class="field">
        <%= f.label :starting_price, class: "required" %><br>
        <%= f.text_field :starting_price %>
    </div>
    <div class="field">
        Category<br>
        <%= f.select(:category_id, options_for_select(@categories, selected: @item.category_id)) %>
    </div>
    <%= f.submit "List item" %>
<% end %>